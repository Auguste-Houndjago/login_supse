generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  nom            String
  prenom         String
  telephone      String
  dateNaissance  DateTime
  adresse        String
  occupation     String?
  createdAt      DateTime @default(now()) @map("created_at")

  rendezVous     RendezVous[]
  
  @@map("patients")
}

model Medecin {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  nom            String
  prenom         String
  telephone      String
  dateNaissance  DateTime
  adresse        String
  specialite     String
  createdAt      DateTime @default(now()) @map("created_at")

  rendezVous     RendezVous[]
  disponibilites Disponibilite[]
  
  @@map("medecins")
}

model RendezVous {
  id         String   @id @default(uuid())
  patientId  String   @map("patient_id")
  medecinId  String   @map("medecin_id")
  date       DateTime
  heure      DateTime
  motif      String
  statut     Statut   @default(en_attente)
  createdAt  DateTime @default(now()) @map("created_at")

  patient    Patient  @relation(fields: [patientId], references: [id])
  medecin    Medecin  @relation(fields: [medecinId], references: [id])

  @@map("rendez_vous")
}

model Disponibilite {
  id          String   @id @default(uuid())
  medecinId   String   @map("medecin_id")
  jourSemaine Int      @map("jour_semaine") // 0 = dimanche, 6 = samedi
  heureDebut  DateTime @map("heure_debut")
  heureFin    DateTime @map("heure_fin")
  createdAt   DateTime @default(now()) @map("created_at")

  medecin     Medecin  @relation(fields: [medecinId], references: [id])

  @@map("disponibilites")
}

enum Statut {
  en_attente
  confirme
  annule
  termine
}
