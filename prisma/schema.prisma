generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  nom       String
  prenom    String
  avatarUrl      String? 
  telephone String
  dateNaissance DateTime
  adresse   String
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  patient   Patient?
  medecin   Medecin?
}

model Patient {
  id         String   @id @default(uuid())
  userId     String   @unique @map("user_id")
  occupation String?
  
  user       User     @relation(fields: [userId], references: [id])
  rendezVous RendezVous[]

  @@map("patients")
}

model Medecin {
  id             String   @id @default(uuid())
  userId         String   @unique @map("user_id")
  specialite     String

  user           User     @relation(fields: [userId], references: [id])
  rendezVous     RendezVous[]
  disponibilites Disponibilite[]

  @@map("medecins")
}

model RendezVous {
  id         String   @id @default(uuid())
  patientId  String   @map("patient_id")
  medecinId  String   @map("medecin_id")
  date       DateTime
  heure      DateTime
  motif      String
  statut     Statut   @default(en_attente)
  createdAt  DateTime @default(now()) @map("created_at")

  patient    Patient  @relation(fields: [patientId], references: [id])
  medecin    Medecin  @relation(fields: [medecinId], references: [id])

  @@map("rendez_vous")
}

model Disponibilite {
  id          String   @id @default(uuid())
  medecinId   String   @map("medecin_id")
  jourSemaine Int      @map("jour_semaine") // 0 = dimanche, 6 = samedi
  heureDebut  DateTime @map("heure_debut")
  heureFin    DateTime @map("heure_fin")
  createdAt   DateTime @default(now()) @map("created_at")

  medecin     Medecin  @relation(fields: [medecinId], references: [id])

  @@map("disponibilites")
}

enum Statut {
  en_attente
  confirme
  annule
  termine
}
